<?xml version="1.0" encoding="UTF-8" ?>
<!-- Includes 2010 work done by John Hawthornthwaite(hagershorn1) for an ancestry report in PhpGedView -->
<Report>
	<Title><var var="I18N::translate('Family history')" /></Title>
	<Description><var var="I18N::translate('A report of an individual’s relatives, in a narrative style.')" /></Description>
	<Input name="pid" lookup="INDI" type="text"><var var="I18N::translate('Individual')" /></Input>
	<Input name="relatives" type="select" default="ancestors" options="child-family=>I18N::translate('Parents and siblings')|spouse-family=>I18N::translate('Spouses and children')|direct-ancestors=>I18N::translate('Direct line ancestors')|ancestors=>I18N::translate('Direct line ancestors and their families')|descendants=>I18N::translate('Descendants')|all=>I18N::translate('All')"><var var="I18N::translate('Choose relatives')"/></Input>
	<Input name="maxgen" type="select" options="3=>I18N::number(3)|4=>I18N::number(4)|5=>I18N::number(5)|6=>I18N::number(6)|7=>I18N::number(7)|8=>I18N::number(8)|9=>I18N::number(9)|10=>I18N::number(10)|-1=>I18N::translate('All')" default="3"><var var="I18N::translate('Generations')" /></Input>
	<Input name="sources" type="checkbox" default="1"><var var="I18N::translate('Show sources')" /></Input>
	<Input name="notes" type="checkbox" default="1"><var var="I18N::translate('Show notes')" /></Input>
	<!--SetVar name="relexpl" value="I18N::translate('Relationship to the selected individual: f=father, m=mother, s=son, d=daughter, x=brother/sister/spouse (fmf=father's mother's father, ...)')" /-->
	<Input name="famrel" type="select" default="1" options="0=>I18N::translate('No')|1=>I18N::translate('Relationship to the selected individual: f=father, m=mother, s=son, d=daughter, x=brother/sister/spouse (fmf=father's mother's father, ...)')" ><var var="I18N::translate('Show family relationship')"/></Input>
	<SetVar name="occu" value="on" />
	<SetVar name="resi" value="on" />
	<Input name="sortby" type="select" default="generation" options="none=>I18N::translate('none')|generation=>I18N::translate('generation')|BIRT:DATE=>I18N::translate('sort by date of birth')|NAME=>I18N::translate('sort by name')"><var var="I18N::translate('Sort order')"/></Input>
	<Input name="nick" type="select" default="0" options="0=>I18N::translate('No')|1=>I18N::translate('Yes, between double quotes: &quot;nick&quot;')|2=>I18N::translate('Yes, between parenthesis: (nick)')"><var var="I18N::translate('Show nicknames')"/></Input>
	<Input name="nmselct" type="select" default="$nmselct" options="first=>I18N::translate('Name at birth')|latest=>I18N::translate('Latest recorded name')"><var var="I18N::translate('Which names to show')"/></Input>
	<Input name="photos" type="checkbox" default="1"><var var="I18N::translate('Show photos')"/></Input>
	<Input name="children" type="checkbox" default="1"><var var="I18N::translate('Show children of ancestors')" /></Input>
	<Input name="pageSize" type="select" options="A4=>I18N::translateContext('paper size','A4')|A3=>I18N::translateContext('paper size', 'A3')|US-Letter=>I18N::translateContext('paper size','Letter')|US-Legal=>I18N::translateContext('paper size','Legal')|US-Tabloid=>I18N::translateContext('paper size','Tabloid')"><var var="I18N::translate('Page size')" /></Input>
	<SetVar name="fonts" value="dejavusans" />
	<!-- Header -->
	<Style name="header" font="$fonts" size="14" style="b" />
	<!-- Page numbers text -->
	<Style name="pagenum" font="$fonts" size="8"/>
	<!-- Standard text -->
	<Style name="text" font="$fonts" size="10"/>
	<!-- Links to sources - required style name by the generator -->
	<Style name="footnotenum" font="$fonts" size="7"/>
	<!-- Source text - FootnoteTexts - required style name by the generator -->
	<Style name="footnote" font="$fonts" size="8"/>
	<!-- Generated by style - required style name by the generator -->
	<Style name="genby" font="$fonts" size="8" />
	<!-- Date Text-->
	<Style name="date" font="$fonts" size="8"/>
	<!-- Note Text -->
	<Style name="note" font="$fonts" size="9"/>
	<!-- Filler Text -->
	<Style name="filler" font="$fonts" size="4"/>
	<!-- Individual name -->
	<Style name="name" font="$fonts" size="10" style="b" />
	<Style name="namech" font="$fonts" size="8" style="b" />
	<Style name="subheader" font="$fonts" size="12" style="b" />
	<Style name="label1" font="$fonts" size="8"/>
	<Style name="label2" font="$fonts" size="10"/>
	<Style name="label3" font="$fonts" size="10" style="b" color="#dc143c" />
	<SetVar name="num" value="1" />
	<SetVar name="generation" value="0" />
	<SetVar name="empty_name" value="f" />
	<SetVar name="empty_start_value" value="0" />
	<SetVar name="nametokeep" value=" " />
	<SetVar name="personNumber" value="1" />
	<SetVar name="individual" value=" " />
	<SetVar name="spouse" value="" />
	<SetVar name="childNumber" value="1" />
	<SetVar name="minheight" value="20" />
	<!-- New Page for Sources controller if SOUR exist -->
	<SetVar name="source_exist" value="0" />
	<SetVar name="ignore" value="CHAN,CHIL,FAMC,NAME,NOTE,OBJE,RESN,SEX,TITL,_UID,_WT_OBJE_SORT"/>
	<setvar name="dump" value="dval" />
	<setvar name="dval" value="25" comment="don't show all the first 25 variables" />
	<setvar name="lang" value="@lang"/>
	<setvar name="lc1" value="1"/>
	<if condition="$lang=='de'">
		<setvar name="lc1" value="0"/>
	</if>
	<if condition="$relatives=='child-family'"><SetVar name="explain" value="I18N::translate('Parents and siblings')"/></if>
	<if condition="$relatives=='spouse-family'"><SetVar name="explain" value="I18N::translate('Spouses and children')"/></if>
	<if condition="$relatives=='direct-ancestors'"><SetVar name="explain" value="I18N::translate('Direct line ancestors')"/></if>
	<if condition="$relatives=='ancestors'"><SetVar name="explain" value="I18N::translate('Direct line ancestors and their families')"/></if>
	<if condition="$relatives=='descendants'"><SetVar name="explain" value="I18N::translate('Descendants')"/></if>
	<if condition="$relatives=='all'"><SetVar name="explain" value="I18N::translate('All')"/></if>
	<if condition="$sortby=='generation'"> <!-- reportParserGenerate cannot sort by generation these cases -->
		<if condition="$relatives=='child-family'"><SetVar name="sortby" value="BIRT:DATE"/></if>
		<if condition="$relatives=='spouse-family'"><SetVar name="sortby" value="BIRT:DATE"/></if>
		<if condition="$relatives=='all'"><SetVar name="sortby" value="BIRT:DATE"/></if>
	</if>
	<GedCom id="$pid"><SetVar name="startname" value="@NAME" trim="/" /></GedCom>
	<SetVar name="startname" value="$startname" trim="*" />
	<SetVar name="Family_history" value="$startname: $explain" />
	<SetVar name="title" value="$startname: $explain" />
	<SetVar name="format" value="@format" />
	<SetVar name="lpos1" value="25" />
	<SetVar name="lpos2" value="40" />
	<if condition="$photos=='on'">
		<SetVar name="lpos1" value="65" />
		<SetVar name="lpos2" value="80" />
	</if>
	<SetVar name="ww" value="500-$lpos1" />
	<if condition="$pageSize=='A3'">
		<SetVar name="ww" value="750-$lpos1" />
	</if>
	<SetVar name="namesep" value="I18N::translate('née')"/>
	<Doc pageSize="$pageSize" headermargin="15" topmargin="56" leftmargin="40" rightmargin="30" bottommargin="40" >
		<Header comment="only used for html output" >
		<GedCom id="$pid">
			<Textbox newline="1" pos="rel">
				<Text style="header"><GetPersonName nickname="$nick" select="$nmselct" name_sep="$namesep" />: <var var="$explain"/></Text>
			</Textbox>
		</GedCom>
			<!--Cell style="header" align="center" height="30" newline="1"><GetPersonName id="$pid" />: <var var="$explain" /></Cell>
			<Cell align="rightrtl" newline="1" style="pagenum"><var var="I18N::translate('Page')" /> <PageNum /> <var var="I18N::translate('of')" /> <TotalPages /></Cell-->
		</Header>
		<Body>
			<if condition="$famrel=='1'">
			<Textbox newline="1" pos="rel">
				<Text style="name"><var var="I18N::translate('Explanation')"/>: </Text>
				<Text style="text"><var var="I18N::translate('Relationship to the selected individual is shown in parenthesis after the name: ')"/><br />
			<var var="I18N::translate('f=father, m=mother, s=son, d=daughter, x=brother/sister/spouse (fmf=father's mother's father, ...)')"/><br /><br /></Text>
			</Textbox>
			</if>
			<Relatives id="$pid" group="$relatives" sortby="$sortby" maxgen="$maxgen">
				<if condition="$dupl=='no'">
				<SetVar name="gender" value="m" />
				<if condition="@SEX=='F'">
					<SetVar name="gender" value="f" />
				</if>
				<if condition="$generation!=@generation and $sortby=='generation'">
					<if condition="$empty_name=='t'" >
						<TextBox width="50" height="20">
							<SetVar name="empty_end_value" value="$num-1" />
							<Text style="text"><var var="empty_start_value" />-<var var="empty_end_value" />.</Text>
						</TextBox>
						<TextBox width="475" height="12" newline="1" >
							<Text style="text"><br /></Text>
						</TextBox>
						<TextBox width="25" height="20" newline="1">
							<Text style="text"><br /></Text>
						</TextBox>
						<SetVar name="empty_start_value" value="$num" />
					</if>
					<!--Cell align="center" height="30" newline="1" style="subheader"><sp /><br /><var var="I18N::translate('Generation ')" /><Generation /></Cell-->
					<TextBox height="30" newline="1" left="200pt" pos="rel">
						<Text style="subheader"><br /><var var="I18N::translate('Generation ')" /><Generation /><br /></Text>
					</TextBox>
					<SetVar name="generation" value="@generation" />
				</if>
				<SetVar name="indiname" value="@NAME" />
				<if condition="$indiname==''">
					<if condition="$empty_name=='f'">
						<SetVar name="empty_name" value="t" />
						<SetVar name="empty_start_value" value="$num" />
					</if>
				</if>
				<if condition="$indiname!=''">
					<if condition="$empty_name=='t'" >
						<TextBox width="50" height="20">
							<SetVar name="empty_end_value" value="$num-1" />
							<Text style="text"><var var="empty_start_value" />-<var var="empty_end_value" />.</Text>
						</TextBox>
						<TextBox width="475" height="12" newline="1">
							<Text style="text"><br /></Text>
						</TextBox>
						<TextBox width="25" height="20" newline="1">
							<Text style="text"><br /></Text>
						</TextBox>
						<SetVar name="empty_name" value="f" />
					</if>
					<SetVar name="hph" value="$minheight" />
					<SetVar name="top_adj" value="-18" />
					<if condition="$photos=='on' and @OBJE!=''" >
						<SetVar name="lpos11" value="$lpos1-35" />
						<SetVar name="hph" value="70" />
					</if>
					<!-- Individual counter height="$hph" -->
					<TextBox width="50" pos="rel" height="$hph" reseth="1">
						<Text style="text"><var var="num" />.</Text>
					</TextBox>
					<if condition="$photos=='on' and @OBJE!=''" >
						<if condition="$format=='HTML'">
							<SetVar name="top_adj_ph" value="-10" />
							<SetVar name="top_adj" value="-28" x="$top_adj+$top_adj_ph" />
						</if>
						<TextBox newline="0" pagecheck="0" padding="1" reseth="1" width="30" left="$lpos11" pos="rel" top_adj="$top_adj_ph">
							<Image file="@FILE" width="30" ln="T" />
						</TextBox>
					</if>
					<SetVar name="cpid" value="@ID" />
					<TextBox left="$lpos1" newline="1" pagecheck="0" height="$hph" pos="rel" top_adj="$top_adj" width="0" >
						<!-- Sentence 1 Individual, name... -->
						<Text style="name"><GetPersonName id="" select="combined" fam_relation="$famrel" name_sep="$namesep" nickname="$nick" /></Text>
						<!-- level 1 sources -->
					<if condition="$sources=='on'">
						<RepeatTag tag="SOUR" >
							<Footnote>
								<Gedcom id="@SOUR">
									<if condition="@AUTH!=''"><GedcomValue tag="AUTH" />, </if>
									«<GedcomValue tag="TITL" />»
									<if condition="@PUBL!=''"> (<GedcomValue tag="PUBL" />)</if>
								</Gedcom>
								<if condition="@PAGE!=''">: <GedcomValue tag="SOUR:PAGE" /></if>
								<if condition="@DATA:TEXT!=''"><br /><GedcomValue tag="SOUR:DATA:TEXT" /></if>
							</Footnote>
							<SetVar name="source_exist" value="1" />
						</RepeatTag>
					</if>
						<!-- level 2 sources -->
					<if condition="$sources=='on'">
						<RepeatTag tag="NAME:SOUR" >
							<Footnote>
								<Gedcom id="@SOUR">
									<if condition="@AUTH!=''"><GedcomValue tag="AUTH" />, </if>
									«<GedcomValue tag="TITL" />»
									<if condition="@PUBL!=''"> (<GedcomValue tag="PUBL" />)</if>
								</Gedcom>
								<if condition="@PAGE!=''">: <GedcomValue tag="SOUR:PAGE" /></if>
								<if condition="@DATA:TEXT!=''"><br /><GedcomValue tag="SOUR:DATA:TEXT" /></if>
							</Footnote>
							<SetVar name="source_exist" value="1" />
						</RepeatTag>
					</if>
					<Facts ignore="$ignore" families="1">
					<SetVar name="fact" value="@fact"/> <!-- The facts are sorted by date -->
						<!--Text style="label3" color="#dc143c" > <var var="fact" /></Text-->
						<if condition="$fact=='BIRT'" >
						<!-- Individual, birth... -->
							<Text style="text">
								<if condition="$gender=='m'"> <var var="I18N::translate('He was born')" /></if>
								<if condition="$gender=='f'"> <var var="I18N::translate('She was born')" /></if>
							</Text>
						<Text style="text">
							<if condition="@DATE!=''"> <GedcomValue tag="DATE" level="2" /></if>
							<if condition="@PLAC!=''"><var var="I18N::translate(' in ')" /> <GedcomValue tag="PLAC" level="2" /></if>
							<if condition="(@desc=='Y') and (@DATE=='' and @PLAC=='')"><var var="I18N::translate(' but the details are unknown')" /></if>
							<if condition="@CAUS!=''"> <var var="I18N::translate('by')" /> <GedcomValue tag="CAUS" level="2" lcfirst="$lc1" /></if>
						.</Text>
						<if condition="$sources=='on'">
							<RepeatTag tag="@fact:SOUR" >
								<Footnote>
									<Gedcom id="@SOUR">
										<if condition="@AUTH!=''"><GedcomValue tag="AUTH" />, </if>
										«<GedcomValue tag="TITL" />»
										<if condition="@PUBL!=''"> (<GedcomValue tag="PUBL" />)</if>
									</Gedcom>
									<if condition="@PAGE!=''">: <GedcomValue tag="SOUR:PAGE" /></if>
									<if condition="@DATA:TEXT!=''"><br /><GedcomValue tag="SOUR:DATA:TEXT" /></if>
								</Footnote>
								<SetVar name="source_exist" value="1" />
							</RepeatTag>
						</if>
						<SetVar name="dval" value="1001" />
						<!--SetVar name="dm_xx" value="@$dump" /-->
						<if condition="$notes=='on'" >
						<Text style="note" color="#006400" >
							<sp />
							<RepeatTag tag="@fact:NOTE">
							<br /><sp /><sp /><var var="I18N::translate('Note')" />: "<GedcomValue tag="NOTE" />". <br />
							</RepeatTag>
							<setvar name="dummy" value="two repeatTag's may not be adjacent to each other!" />
							<RepeatTag tag="@fact:SOUR" >
							<if condition="@PAGE!='' and @DATA:TEXT!=''"><br /><sp /><sp /><GedcomValue tag="SOUR:PAGE" />:<br />"<GedcomValue tag="SOUR:DATA:TEXT" />".<br /></if>
							</RepeatTag>
						</Text>
						</if>
						</if>
						<if condition="$fact=='CHR'">
						<!-- Sentence 2 Individual, christened... -->
							<Text style="text">
								<if condition="$gender=='m'"> <var var="I18N::translate('He was christened')" /></if>
								<if condition="$gender=='f'"> <var var="I18N::translate('She was christened')" /></if>
							</Text>
						<Text style="text">
							<if condition="@DATE!=''"> <GedcomValue tag="DATE" level="2" /></if>
							<if condition="@PLAC!=''"><var var="I18N::translate(' in ')" /> <GedcomValue tag="PLAC" level="2" /></if>
							<if condition="(@desc=='Y') and (@DATE=='' and @PLAC=='')"><var var="I18N::translate(' but the details are unknown')" /></if>
							<if condition="@CAUS!=''"> <var var="I18N::translate('by')" /> <GedcomValue tag="CAUS" level="2" lcfirst="$lc1" /></if>
						.</Text>
						<if condition="$sources=='on'">
							<RepeatTag tag="CHR:SOUR" >
								<Footnote>
									<Gedcom id="@SOUR">
										<if condition="@AUTH!=''"><GedcomValue tag="AUTH" />, </if>
										«<GedcomValue tag="TITL" />»
										<if condition="@PUBL!=''"> (<GedcomValue tag="PUBL" />)</if>
									</Gedcom>
									<if condition="@PAGE!=''">: <GedcomValue tag="SOUR:PAGE" /></if>
									<if condition="@DATA:TEXT!=''"><br /><GedcomValue tag="SOUR:DATA:TEXT" /></if>
								</Footnote>
								<SetVar name="source_exist" value="1" />
							</RepeatTag>
						</if>
						<SetVar name="dval" value="1001" />
						<!--SetVar name="dm_xx" value="@$dump" /-->
						<if condition="$notes=='on'" >
						<Text style="note" color="#006400" >
							<sp />
							<RepeatTag tag="@fact:NOTE">
							<br /><sp /><sp /><var var="I18N::translate('Note')" />: "<GedcomValue tag="NOTE" />". <br />
							</RepeatTag>
							<setvar name="dummy" value="two repeatTag's may not be adjacent to each other!" />
							<RepeatTag tag="CHR:SOUR" >
							<if condition="@PAGE!='' and @DATA:TEXT!=''"><br /><sp /><sp /><GedcomValue tag="SOUR:PAGE" />:<br />"<GedcomValue tag="SOUR:DATA:TEXT" />".<br /></if>
							</RepeatTag>
						</Text>
						</if>
						</if>
						<if condition="$fact=='ADOP'">
						<!-- Sentence 2 Individual, adopted... -->
							<Text style="text">
								<if condition="$gender=='m'"> <var var="I18N::translate('He was adopted')" /></if>
								<if condition="$gender=='f'"> <var var="I18N::translate('She was adopted')" /></if>
							</Text>
						<Text style="text">
							<if condition="@DATE!=''"> <GedcomValue tag="DATE" level="2" /></if>
							<if condition="@PLAC!=''"><var var="I18N::translate(' in ')" /> <GedcomValue tag="PLAC" level="2" /></if>
							<if condition="(@desc=='Y') and (@DATE=='' and @PLAC=='')"><var var="I18N::translate(' but the details are unknown')" /></if>
							<if condition="@CAUS!=''"> <var var="I18N::translate('by')" /> <GedcomValue tag="CAUS" level="2" lcfirst="$lc1" /></if>
						.</Text>
						<if condition="$sources=='on'">
							<RepeatTag tag="CHR:SOUR" >
								<Footnote>
									<Gedcom id="@SOUR">
										<if condition="@AUTH!=''"><GedcomValue tag="AUTH" />, </if>
										«<GedcomValue tag="TITL" />»
										<if condition="@PUBL!=''"> (<GedcomValue tag="PUBL" />)</if>
									</Gedcom>
									<if condition="@PAGE!=''">: <GedcomValue tag="SOUR:PAGE" /></if>
									<if condition="@DATA:TEXT!=''"><br /><GedcomValue tag="SOUR:DATA:TEXT" /></if>
								</Footnote>
								<SetVar name="source_exist" value="1" />
							</RepeatTag>
						</if>
						<SetVar name="dval" value="1001" />
						<!--SetVar name="dm_xx" value="@$dump" /-->
						<if condition="$notes=='on'" >
						<Text style="note" color="#006400" >
							<sp />
							<RepeatTag tag="@fact:NOTE">
							<br /><sp /><sp /><var var="I18N::translate('Note')" />: "<GedcomValue tag="NOTE" />". <br />
							</RepeatTag>
							<setvar name="dummy" value="two repeatTag's may not be adjacent to each other!" />
							<RepeatTag tag="CHR:SOUR" >
							<if condition="@PAGE!='' and @DATA:TEXT!=''"><br /><sp /><sp /><GedcomValue tag="SOUR:PAGE" />:<br />"<GedcomValue tag="SOUR:DATA:TEXT" />".<br /></if>
							</RepeatTag>
						</Text>
						</if>
						</if>
						<if condition="$fact=='FAMS'">
						<SetVar name="fam" value="@FAMS"/>
						<Gedcom id="@FAMS">
							<SetVar name="chfam" value="ch$fam" />
							<SetVar name="hpid" value="@HUSB"/>
							<SetVar name="wpid" value="@WIFE"/>
							<if condition="$cpid==$hpid">
								<SetVar name="spid" value="@WIFE" />
							</if>
							<if condition="$cpid==$wpid">
								<SetVar name="spid" value="@HUSB" />
							</if>
							<SetVar name="marrtype" value="_XXX"/>
							<if condition="@MARR:DATE!=''"><SetVar name="marrtype" value="MARR"/></if>
							<if condition="@MARR=='Y'"><SetVar name="marrtype" value="MARR"/></if>
							<SetVar name="mtype2" value="$marrtype"/>
							<if condition="@MARR:TYPE=='COMMON LAW'"><SetVar name="mtype2" value="EVEN"/><SetVar name="marrtype" value="MARR"/></if>
							<SetVar name="sp" value="%26emsp;" />
							<Text style="text"><br /><br />
								<if condition="$lang=='sv'"><sp /><var var="sp" amp="1"/></if>
								<if condition="$gender=='m' and $mtype2=='EVEN'"><var var="I18N::translate('He moved in with')" /></if>
								<if condition="$gender=='f' and $mtype2=='EVEN'"><var var="I18N::translate('She moved in with')" /></if>
								<if condition="$gender=='m' and $mtype2=='ENGA'"><var var="I18N::translate('He engaged')" /></if>
								<if condition="$gender=='f' and $mtype2=='ENGA'"><var var="I18N::translate('She engaged')" /></if>
								<if condition="$gender=='m' and $mtype2=='MARR'"><var var="I18N::translate('He married')" /></if>
								<if condition="$gender=='f' and $mtype2=='MARR'"><var var="I18N::translate('She married')" /></if>
							</Text>
							<Gedcom id="$marrtype">
								<if condition="(($spid != '') and (@DATE != '' or @PLAC != '' or @desc == 'Y'))">
						<Text style="text">
							<Gedcom id="$spid">
							<if condition="$spid!=''"> <GetPersonName id="$spid" select="$nmselct" nickname="$nick" />
									<Gedcom id="@FAMC">
										<if condition="$gender=='m'">, <var var="I18N::translate('daughter of')" /> </if>
										<if condition="$gender=='f'">, <var var="I18N::translate('son of')" /> </if>
										<if condition="$gender!='m' and $gender!='f'">, <var var="I18N::translate('child of')" /> </if>
										<Gedcom id="@HUSB">
											<GetPersonName select="$nmselct" nickname="$nick" />
											<sp /><var var="I18N::translate('and')" />
										</Gedcom>
										<Gedcom id="@WIFE">
										<sp /><GetPersonName select="$nmselct" nickname="$nick" />,
										</Gedcom>
									</Gedcom>
							</if>
							</Gedcom>
							<if condition="@DATE!=''"> <GedcomValue tag="DATE" level="2" /></if>
